{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/your_script.py",
            "cwd": "${workspaceFolder}",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ],
            "args": [],
            "env": {},
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": null,
            "postDebugTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "-c",
                "exec(open('.vscode/your_environment_setup.py').read())"
            ],
            "console": "internalConsole",
            "stopOnEntry": false
        }
    ]
}

